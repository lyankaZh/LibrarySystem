        <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Left" Margin="74,82,0,0" VerticalAlignment="Top" Width="75" Click="saveButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="168,82,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
