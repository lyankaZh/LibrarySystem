<Window x:Class="Library.AddWindows.AddOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.AddWindows"
        mc:Ignorable="d"
        Title="AddOrderWindow" Height="278" Width="369">
    <Grid>
        <ComboBox x:Name="readerComboBox" IsEditable="True" HorizontalAlignment="Left" Margin="158,39,0,0" VerticalAlignment="Top" Width="115" SelectedValuePath="ReaderId" DisplayMemberPath="ReaderId" Height="31"/>
        <Label x:Name="readerLabel" Content="Reader" HorizontalAlignment="Left" Margin="75,39,0,0" VerticalAlignment="Top" Width="69" Height="31"/>
        <Label x:Name="bookLabel" Content="Book" HorizontalAlignment="Left" Margin="75,91,0,0" VerticalAlignment="Top" Width="56"/>
        <ComboBox x:Name="bookComboBox" IsEditable="True" HorizontalAlignment="Left" Margin="158,91,0,0" VerticalAlignment="Top" Width="115" SelectedValuePath="BookId" DisplayMemberPath="BookId" Height="31"/>
        <Label x:Name="periodLabel" Content="Period" HorizontalAlignment="Left" Margin="75,142,0,0" VerticalAlignment="Top" Width="56"/>
        <TextBox x:Name="periodTextBox" HorizontalAlignment="Left" Height="23" Margin="158,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="115"/>
        <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Left" Margin="96,199,0,0" VerticalAlignment="Top" Width="75" Click="saveButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="198,199,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click"/>
    </Grid>
</Window>
