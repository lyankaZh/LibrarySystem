        mc:Ignorable="d"
        Title="Add new reader" Height="325.881" Width="296.455" ResizeMode="CanMinimize">
    <Grid>
        <Label x:Name="nameLabel" Content="First name" HorizontalAlignment="Left" Margin="28,66,0,0" VerticalAlignment="Top" Width="89"/>
        <Label x:Name="surnameLabel" Content="Last name" HorizontalAlignment="Left" Margin="28,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.627,-0.572" Width="74"/>
        <Label x:Name="phoneLabel" Content="Phone number" HorizontalAlignment="Left" Margin="28,128,0,0" VerticalAlignment="Top" Width="108"/>
        <Label x:Name="label" Content="Address" HorizontalAlignment="Left" Margin="28,159,0,0" VerticalAlignment="Top" Width="108"/>
        <Label x:Name="middleNameLabel" Content="Middle name" HorizontalAlignment="Left" Margin="28,97,0,0" VerticalAlignment="Top" Width="89"/>
