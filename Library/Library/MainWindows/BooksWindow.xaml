<Window x:Class="Library.MainWindows.BooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Книги" Height="455.909" Width="692.295" ResizeMode="CanMinimize">
    <Grid>
        <ToolBar x:Name="toolBar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="686" Height="42">
            <Button x:Name="addBookButton" Content="Add Book" Height="37" VerticalAlignment="Top" Width="75" Click="addBookButton_Click"/>
            <Button x:Name="editBookButton" Content="Edit" Height="37" VerticalAlignment="Top" Width="58" IsEnabled="False"/>
            <Button x:Name="deleteButton" Content="Delete" Height="37" VerticalAlignment="Top" Width="62" IsEnabled="False"/>
        </ToolBar>
        <DataGrid x:Name="booksTable" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Height="318" Width="666" AutoGenerateColumns="False" ItemsSource="{Binding Books}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Назва" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Автори" Binding="{Binding Authors}" />
                <DataGridTextColumn Header="Рік" Binding="{Binding Year}" />
                <DataGridTextColumn Header="К-сть сторінок" Binding="{Binding Pages}" />
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genre}" />
                <DataGridTextColumn Header="Мова" Binding="{Binding Language}" />
                <DataGridTextColumn Header="Видавництво" Binding="{Binding Publisher}" />
                <DataGridTextColumn Header="Розташування" Binding="{Binding Location}" />
                <DataGridTextColumn  Header="В наявності" Binding="{Binding IsInLibrary}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
